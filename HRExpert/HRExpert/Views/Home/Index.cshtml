@model HRExpert.Models.Statistici.StatisticsModel;

<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div class="row align-items-center">
    <h1 id="introducere">HRExpert - Expertul tau in gestiunea personalului</h1>
</div>

<div class="row align-items-center">
    <p id="statContracte"><i class='far fa-hand-point-right'></i>Exista @Model.NrContracte contracte active la momentul actual.</p>
</div>

<div class="row align-items-center">
    <p id="statPersoane"><i class='far fa-hand-point-right'></i>Exista @Model.NrPersoane persoane active la momentul actual.</p>
</div>

<div class="row align-items-center">
    <p id="statFemeiSex"><i class='far fa-hand-point-right'></i>Exista @Model.NrFemei angajate de sex feminim.</p>
</div>

<div class="row align-items-center">
    <p id="statBarbatiSex"><i class='far fa-hand-point-right'></i>Exista @Model.NrBarbati angajati de sex masculin.</p>
</div>

<div class="row align-items-center">
    <p id="statContracteSal"><i class='far fa-hand-point-right'></i>Salariul mediu este de @Model.SalariuMediu de lei.</p>
</div>

<div class="row align-items-center">
    <p id="statContractePerioada"><i class='far fa-hand-point-right'></i>Exista @Model.NrContractePerioadaNedeterminata contracte pe perioada nedeterminata si @Model.NrContractePerioadaDeterminata pe perioada determinata.</p>
</div>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="persoane">
            </div>
            <div class="mdl-card__supporting-text">
                Gestiune personal
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Persons" asp-action="Index">
                    Afisare persoane
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="contracte">

            </div>
            <div class="mdl-card__supporting-text">
                Gestiune contracte
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Contracts" asp-action="Index">
                    Afisare contracte
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="statistici">

            </div>
            <div class="mdl-card__supporting-text">
                Statistici despre personal si contracte
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Statistics" asp-action="Index">
                    Afisare statistici
                </a>
            </div>
        </div>
    </div>


</div>


