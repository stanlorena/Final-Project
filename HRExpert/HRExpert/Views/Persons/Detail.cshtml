@using HRExpert.Models.Persoane
@model HRExpert.Models.Persoane.PersonDetailModel

<script src='https://kit.fontawesome.com/a076d05399.js'></script>

<div class="container">
    <div class="page-header clearfix detailHeading">

    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <p id="Marca"><b>Marca: </b> @Model.Marca</p>
            <p id="Nume"><b>Nume: </b> @Model.Nume</p>
            <p id="Prenume"><b>Prenume: </b> @Model.Prenume</p>
            <p id="DataNastere"><b>Data nasterii: </b> @Model.DataNastere</p>
            <p id="Sex"><b>Sex: </b> @Model.Sex</p>
            <p id="Nationalitate"><b>Nationalitate: </b> @Model.Nationalitate</p>
            <p id="Email"><b>Email: </b> @Model.Email</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <a class="button" role="button" asp-controller="Persons" asp-action="DeletePerson" asp-route-id="@Model.PersonId"><i class='fas fa-trash-alt'></i></a>
        <a class="button" role="button" asp-controller="Persons" asp-action="EditPerson" asp-route-id="@Model.PersonId"><i class='fas fa-marker'></i></a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="row"><br /></div>
        <h4>Acte de identitate <a class="button" role="button" asp-controller="Persons" asp-action="AddPersonIdentity" asp-route-id="@Model.PersonId">+</a> </h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>CNP</th>
                    <th>Serie</th>
                    <th>Numar</th>
                    <th>Emitent</th>
                    <th>Data Emitere</th>
                    <th>Data Expirare</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var personIdentity in @Model.PersonIdentity)
                {
                    <tr>
                        <td>@personIdentity.CNP</td>
                        <td>@personIdentity.Serie</td>
                        <td>@personIdentity.Numar</td>
                        <td>@personIdentity.Emitent</td>
                        <td>@personIdentity.DataEmitere.ToString("dd/MM/yyyy")</td>
                        <td>@personIdentity.DataExpirare.ToString("dd/MM/yyyy") <a class="close" role="button" asp-controller="Persons" asp-action="DeleteIdentity" asp-route-id="@personIdentity.Id">&times;</a> <a class="close" role="button" asp-controller="Persons" asp-action="EditPersonIdentity" asp-route-id="@personIdentity.Id"><i class='far fa-edit' style='font-size:14px'></i></a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Adrese <a class="button" role="button" asp-controller="Persons" asp-action="AddPersonAddress" asp-route-id="@Model.PersonId">+</a></h4>
        <table class="table table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th>Strada</th>
                    <th>Numar</th>
                    <th>Bloc</th>
                    <th>Etaj</th>
                    <th>Apartament</th>
                    <th>Localitate</th>
                    <th>Judet</th>
                    <th>Data de inceput</th>
                    <th>Data de sfarsit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var personAddress in @Model.PersonAddress)
                {
                    <tr>
                        <td>
                            @personAddress.Strada
                        </td>
                        <td>
                            @personAddress.Numar
                        </td>
                        <td>
                            @personAddress.Bloc
                        </td>
                        <td>
                            @personAddress.Etaj
                        </td>
                        <td>
                            @personAddress.Apartament
                        </td>
                        <td>
                            @personAddress.Localitate
                        </td>
                        <td>
                            @personAddress.Judet
                        </td>
                        <td>
                            @personAddress.DataInceput.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @personAddress.DataSfarsit.ToString("dd/MM/yyyy")<a class="close" role="button" asp-controller="Persons" asp-action="DeleteAddress" asp-route-id="@personAddress.Id">&times;</a> <a class="close" role="button" asp-controller="Persons" asp-action="EditPersonAddress" asp-route-id="@personAddress.Id"><i class='far fa-edit' style='font-size:14px;padding-left:10px;text-align: center'></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>