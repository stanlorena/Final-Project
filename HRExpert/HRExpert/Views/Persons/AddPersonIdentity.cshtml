@using HRExpert.Models.Persoane
@model HRExpert.Models.Persoane.AddPersonIdentityModel

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
}

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted text-center">Adaugare act de identitate</h2>
    </div>
    <div class="jumbotron">
        <div class="col-md-9">
            @using (Html.BeginForm("AddPersonIdentityAction", "Persons", FormMethod.Post))
            {
                @Html.HiddenFor(a => a.IdPersoana)
                <div>
                    CNP
                    @Html.TextBoxFor(a => a.CNP)
                </div>
                <div>
                    Numar
                    @Html.TextBoxFor(a => a.Numar)
                </div>
                <div>
                    Serie
                    @Html.TextBoxFor(a => a.Serie)
                </div>
                <div>
                    Emitent
                    @Html.TextBoxFor(a => a.Emitent)
                </div>
                <div>
                    Data emiterii
                    @Html.TextBoxFor(a => a.DataEmitere)
                </div>
                <div>
                    Data expirarii
                    @Html.TextBoxFor(a => a.DataExpirare)
                </div>
                <div>
                    <p></p>
                    <button type="submit">Adauga</button>
                </div>
            }
        </div>
    </div>
</div>
