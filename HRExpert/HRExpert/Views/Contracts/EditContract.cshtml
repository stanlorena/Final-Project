@using HRExpert.Models.Contracte
@model HRExpert.Models.Contracte.AddContractModel

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
}

<div class="container">
    <div class="header clearfix detailHeading">
        <h2 class="text-muted text-center">Editare contract</h2>
    </div>
    <div class="jumbotron">
        <div class="col-md-9">
            @using (Html.BeginForm("EditContractAction", "Contracts", FormMethod.Post))
            {
                @Html.HiddenFor(a => a.Id)
                @Html.HiddenFor(a => a.Marca)
                <div>
                    Tip contract
                    @Html.DropDownListFor(a => a.TipContract, new SelectList(new List<Object>{
                          new { value = "Contract individual de munca" , text = "Contract individual de munca"  },
                          new { value = "Contract de munca la domiciliu", text = "Contract de munca la domiciliu"} },
                          "value",
                          "text",
                          Model.TipContract
                       ))
                </div>
                <div>
                    Numar contract
                    @Html.TextBoxFor(a => a.NumarContract)
                </div>
                <div>
                    Data inceput
                    @Html.TextBoxFor(a => a.DataInceput)
                </div>
                <div>
                    Data sfarsit
                    @Html.TextBoxFor(a => a.DataSfarsit)
                </div>
                <div>
                    <p></p>
                    <button type="submit">Actualizeaza</button>
                </div>
            }
        </div>
    </div>
</div>
