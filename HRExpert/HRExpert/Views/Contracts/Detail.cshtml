                <tr>
                    <th>Departament</th>
                    <th>Functie</th>
                    <th>Data inceput</th>
                    <th>Data sfarsit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var contractOA in @Model.ContractOrganizatoricalAssignment)
