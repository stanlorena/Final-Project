                    <tr>
                        <td> @contractOA.Departament</td>
                        <td> @contractOA.Functie</td>
                        <td> @contractOA.DataInceput</td>
                        <td> @contractOA.DataSfarsit</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

